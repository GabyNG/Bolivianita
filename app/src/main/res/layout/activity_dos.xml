<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   tools:context="com.gaby.android.bolivianita.Dos"
    android:background="#101010"
    >

    <TextView
        android:id="@+id/tvtipicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comida boliviana"
        android:textAllCaps="true"

        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#11aaff"
        android:textSize="30dp"
        android:padding="5dp"
        android:textStyle="italic|bold"/>



    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@+id/tvtipicos"
        android:id="@+id/scroll"
        android:background="#ffffff"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/paceno"
                android:paddingLeft="2dp"
                android:background="@android:color/transparent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/silpanchococha"
                android:paddingLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/saice"
                android:paddingLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/surubi"
                android:paddingLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/keperi"
                android:paddingLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/charquecan"
                android:paddingLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chajchu"
                android:paddingLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chorizochuqui"
                android:paddingLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/costillar"
                android:paddingLeft="2dp"/>

        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scroll"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btLapaz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_weight="1"
            android:text="la Paz"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:background="#f4190d"

             />
        <Button
            android:id="@+id/btCocha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_weight="1"
            android:text="cochabamba"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="#f4190d"
            android:layout_marginLeft="5dp"

            />
        <Button
            android:id="@+id/btBeni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="beni"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="#f4190d"
            android:layout_marginLeft="5dp"
android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout

        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btTarija"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tarija"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:background="#ecee11"
            />
        <Button
           android:id="@+id/btSanta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="santa   cruz "
            android:textStyle="bold"
            android:background="#ecee11"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
        />
        <Button
            android:id="@+id/btOruro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oruro"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#ecee11"
            android:layout_marginLeft="5dp"
                       />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"

                >

        <Button
            android:id="@+id/btPotosi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="potosi"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:background="#090"
            />
        <Button
            android:id="@+id/btChuqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" chuquisaca "
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#090"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/btPando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pando"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="#090"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

</RelativeLayout>
